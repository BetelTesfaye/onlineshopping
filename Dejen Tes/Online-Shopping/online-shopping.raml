/Orders:
  /{id}:
    get:
      responses:
        200:
          body:
            application/json:
              examples:
                {
  "orderid": 128,
  "userid": 1019,
  "addressid": 201,
  "discountid": 1,
  "created": "2020-05-27T23:18:46.000+00:00",
  "modified": null,
  "status": "Accepted",
  "amount": 1000
}
/Create Orders:
  post:
    body:
      application/json:
        examples:
          {
            "products": {
              "productId": 0,
              "quantitiy": 0
            }
          }
    responses:
      200:
        body:
          application/json:
            example:
              {
  "orderid": 128,
  "userid": 1019,
  "addressid": 201,
