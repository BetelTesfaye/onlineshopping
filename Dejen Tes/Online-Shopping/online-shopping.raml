title: Online-Shopping

/users:
  post:
    body:
      application/json:
        example:
          {
            "username":"Dejen",
            "email":"DejenTest@gmail.com"
          }
    responses:
      200:
        body:
          application/json:
            example:
              {
                "uid": 101
              }
/products:
  /{id}:
    get:
      responses:
        200:
          body:
            application/json:
              example:
                {
                  "productid": 101,
                  "categoryid": 19,
                  "name": "KK G-707 Gaming mouse",
                  "description": "the G-707 Gaming mouse is a razor-sharp moouse  with 3000 DPI",
                  "video_url": "https://www.youtube.com/watch?v=3AtDnEC4zak",
                  "price": 7777
                }
/Categories:
  /{id}:
    get:
      responses:
        200:
          body:
            application/json:
              examples:
                {
                  "categoryid": 10
                  "name":"laptop"
                  
                }
/orders:
  get:
    responses:
      200:
        body:
          application/json:
            examples: 
              "map": { "address": 0,
                        "amount": 0,
                        "created": {
